version: '2'
services:
  db:
        image: mysql:8.0
        container_name: mysql-server-80
        command: --default-authentication-plugin=mysql_native_password
#        working_dir: /application
        restart: always
        environment:
          - MYSQL_ROOT_PASSWORD=rootique
          - MYSQL_DATABASE=proj
          - MYSQL_USER=devel
          - MYSQL_PASSWORD=bazinga
        ports:
          - "8082:3306"
  website:
    container_name: php73ap
    build:
      context: ./php
      dockerfile: Dockerfile
    volumes:
      - ./php:/var/www/html
    ports:
      - 8080:80
    depends_on:
      - mysql
